    var attributeSetTemplateSyntax = /(^|.|\r|\n)({{(\w+)}})/;
    var attributeSetForm = new varienForm('attributeSetForm');
    function setSettings(urlNoAction, urlSave,  targetElement)
    {
        var srcValue = $F('mapping_product_type_id_src');
        if (!srcValue.empty() && (srcValue != $F(targetElement))) {
            if(!confirm('If you change Target Attribute Set, it will delete all mapping for it.\n\n'
                + 'Are you sure you want to change it?')) {
                return;
            }
        }
        if (attributeSetForm.validate()) {
            if ($F('mapping_product_type_id_src') != $F(targetElement)) {
                var template = new Template(urlSave, attributeSetTemplateSyntax);
                setLocation(template.evaluate({mapping_product_type_id:$F(targetElement)}));
            } else {
                setLocation(urlNoAction);
            }
        }
    }
//]]>
</script>
